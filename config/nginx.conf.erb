daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;
events {

    use epoll;
    accept_mutex on;
    worker_connections 1024;
}
http {

    gzip on;
    gzip_comp_level 2;
    gzip_min_length 512;

    server_tokens off;

    log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
    access_log logs/nginx/access.log l2met;
    error_log logs/nginx/error.log;

    include mime.types;
    default_type application/octet-stream;
    sendfile on;

    #Must read the body in 5 seconds.
    client_body_timeout 5;

    upstream for_crawler {

        server unix:/tmp/nginx.socket fail_timeout=0;
    }

    server {

        listen <%= ENV["PORT"] %>;
        server_name _;
        keepalive_timeout 5;

        index index.html;
        root /app;

        location ~* \.(jpg|jpeg|png|bmp|svg|css|js|html|txt|json)$ {

            # If the request is a filename/extension, which means directly requesting a file
            try_files $uri =404;
        }

        location / {

            # If the request is a path, which means a web page
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_redirect off;

            if ($http_user_agent ~* "googlebot|yahoo|bingbot|baiduspider|yandex|yeti|yodaobot|gigabot|ia_archiver|facebookexternalhit|twitterbot|developers\.google\.com") {

                proxy_pass http://for_crawler;
                break;
            }
            try_files $uri /i.html;
        }

        if ($http_x_forwarded_proto != "https") {

            return 301 https://$host$request_uri;
        }
    }
}
